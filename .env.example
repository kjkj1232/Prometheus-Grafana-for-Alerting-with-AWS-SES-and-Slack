# ============================================
# Prometheus-Grafana Alerting Stack
# Copy this file to .env and fill in your values
# ============================================

# --- Slack Configuration ---
SLACK_API_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#prometheus-alerts

# --- AWS SES SMTP Configuration ---
SMTP_SMARTHOST=email-smtp.us-west-2.amazonaws.com:587
SMTP_FROM=alerts@yourdomain.com
SMTP_TO=admin@yourdomain.com
SMTP_USERNAME=YOUR_SES_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SES_SMTP_PASSWORD

# --- Grafana Configuration ---
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme
GF_SERVER_ROOT_URL=http://localhost:3000

# --- Node Exporter Targets (comma-separated) ---
# These are the EC2 instance private IPs or hostnames
NODE_EXPORTER_TARGETS=node1:9100,node2:9100
